<% if @comment.save %>
  $("#comments_<%= @comment.commentable.class.name %>_<%= @comment.commentable.id %>")
    .append('<%= render 'comments/comment', resource: @comment %>')
  $("#errors_<%= @comment.commentable.class.name %>_<%= @comment.commentable.id %>")
    .empty()
  $("#new_comment_<%= @comment.commentable.class.name %>_<%= @comment.commentable.id %>")
    .val('')
<% else %>
  $("#errors_<%= @comment.commentable.class.name %>_<%= @comment.commentable.id %>")
    .html('<%= render 'shared/errors', resource: @comment %>')
<% end %>
